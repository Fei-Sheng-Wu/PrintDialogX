<Page x:Class="PrintDialogX.Internal.PrintPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:userControl="clr-namespace:PrintDialogX.Internal.UserControls"
      FontSize="12"
      Loaded="Window_Loaded"
      Unloaded="Window_Closed">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter"></BooleanToVisibilityConverter>

            <Style x:Key="IconButtonStyle" TargetType="Button">
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="Width" Value="35"/>
                <Setter Property="Height" Value="40"/>
                <Setter Property="Foreground" Value="DarkGray"></Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid ClipToBounds="False" Background="Transparent">
                                <ContentPresenter Name="Icon" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"></ContentPresenter>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="Gray"></Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Foreground" Value="Gray"></Setter>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Foreground" Value="#FFC9C9C9"></Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="contentHolder">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="330"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <StackPanel Margin="8" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" DockPanel.Dock="Bottom">
                <ui:Button x:Name="printButton" Appearance="Primary" Content="Print" ToolTip="Print" Click="PrintButton_Click" Width="100"></ui:Button>
                <StackPanel Width="10"></StackPanel>
                <ui:Button x:Name="cancelButton" Content="Cancel" ToolTip="Cancel" Click="CancelButton_Click" Width="100"></ui:Button>
            </StackPanel>
            <ScrollViewer Padding="12,8,16,8" DockPanel.Dock="Top" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly" ManipulationBoundaryFeedback="DocumentPreviewer_ManipulationBoundaryFeedback">
                <Grid Margin="4,0">
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="20"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"></ColumnDefinition>
                                <ColumnDefinition Width="10"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Printer</TextBlock>
                            <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center">Copies</TextBlock>
                            <TextBlock x:Name="pagesTextBlock" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center">Pages</TextBlock>
                            <TextBlock Grid.Column="0" Grid.Row="7" VerticalAlignment="Center">Layout</TextBlock>
                            <ComboBox x:Name="printerComboBox" Grid.Column="2" Grid.Row="0" Margin="0,3.5" DisplayMemberPath="Placeholder" ToolTip="Printer" SelectionChanged="PrinterComboBox_SelectionChanged" DropDownOpened="PrinterComboBox_DropDownOpened"></ComboBox>
                            <Image x:Name="printerPreviewIcon" Grid.Column="2" Grid.Row="0" Width="25" Height="25" Margin="6,0" HorizontalAlignment="Left" VerticalAlignment="Center" IsHitTestVisible="False"></Image>
                            <TextBlock x:Name="printerPreviewText" Grid.Column="2" Grid.Row="0" Margin="35,0" VerticalAlignment="Center" IsHitTestVisible="False" TextTrimming="CharacterEllipsis"></TextBlock>
                            <ui:Button x:Name="printerPreferencesBtn" Grid.Column="2" Grid.Row="1" Margin="0,3.5" HorizontalAlignment="Right" Width="160" Click="PrinterPreferencesButton_Click">Printer Preferences</ui:Button>
                            <ui:NumberBox x:Name="copiesNumberPicker" Grid.Column="2" Grid.Row="3" Margin="0,3.5" Value="1" Maximum="99" Minimum="1" ToolTip="Copies" ValueChanged="CopiesNumberPicker_ValueChanged"/>
                            <CheckBox x:Name="collateCheckBox" Grid.Column="2" Grid.Row="4" Margin="0,3.5" ToolTip="Collate" Visibility="Collapsed" Content="Collate" IsChecked="True"></CheckBox>
                            <ComboBox x:Name="pagesComboBox" Grid.Column="2" Grid.Row="5" Margin="0,3.5" ToolTip="Pages" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged">
                                <ComboBoxItem>All Pages</ComboBoxItem>
                                <ComboBoxItem>Current Page</ComboBoxItem>
                                <ComboBoxItem>Custom Pages</ComboBoxItem>
                            </ComboBox>
                            <ui:TextBox x:Name="customPagesTextBox" Grid.Column="2" Grid.Row="6" Margin="0,3.5" PlaceholderText="e.g. 1, 3-5, 8, 10" Visibility="Collapsed" ToolTip="Custom Pages" InputMethod.IsInputMethodEnabled="False" LostFocus="CustomPagesTextBox_LostFocus"></ui:TextBox>
                            <ComboBox x:Name="orientationComboBox" Grid.Column="2" Grid.Row="7" Margin="0,3.5" ToolTip="Layout" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged">
                                <ComboBoxItem>Portrait</ComboBoxItem>
                                <ComboBoxItem>Landscape</ComboBoxItem>
                            </ComboBox>
                            <Expander x:Name="moreSettingsExpander" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="8" Margin="0,15,0,10" IsExpanded="False">
                                <Expander.Header>
                                    <TextBlock>More Settings</TextBlock>
                                </Expander.Header>
                                <Grid Margin="0,0,0,50">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="10"></ColumnDefinition>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">Color</TextBlock>
                                    <TextBlock Grid.Column="0" Grid.Row="1" VerticalAlignment="Center">Quality</TextBlock>
                                    <TextBlock x:Name="pagesPerSheetTextBlock" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center">Pages per Sheet</TextBlock>
                                    <TextBlock x:Name="pageOrderTextBlock" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center">Page Order</TextBlock>
                                    <TextBlock x:Name="scaleTextBlock" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center">Scale</TextBlock>
                                    <TextBlock x:Name="marginTextBlock" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center">Margin</TextBlock>
                                    <TextBlock x:Name="doubleSidedTextBlock" Grid.Column="0" Grid.Row="8" VerticalAlignment="Center">Double-sided</TextBlock>
                                    <TextBlock Grid.Column="0" Grid.Row="10" VerticalAlignment="Center">Paper Size</TextBlock>
                                    <TextBlock Grid.Column="0" Grid.Row="11" VerticalAlignment="Center">Paper Type</TextBlock>
                                    <TextBlock Grid.Column="0" Grid.Row="12" VerticalAlignment="Center">Paper Source</TextBlock>
                                    <ComboBox x:Name="colorComboBox" Grid.Column="2" Grid.Row="0" Margin="0,3.5" ToolTip="Color" SelectionChanged="SettingComboBox_SelectionChanged"></ComboBox>
                                    <ComboBox x:Name="qualityComboBox" Grid.Column="2" Grid.Row="1" Margin="0,3.5" ToolTip="Quality"></ComboBox>
                                    <ComboBox x:Name="pagesPerSheetComboBox" Grid.Column="2" Grid.Row="2" Margin="0,3.5" ToolTip="Pages Per Sheet" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged">
                                        <ComboBoxItem Content="1"></ComboBoxItem>
                                        <ComboBoxItem Content="2"></ComboBoxItem>
                                        <ComboBoxItem Content="4"></ComboBoxItem>
                                        <ComboBoxItem Content="6"></ComboBoxItem>
                                        <ComboBoxItem Content="9"></ComboBoxItem>
                                        <ComboBoxItem Content="16"></ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox x:Name="pageOrderComboBox" Grid.Column="2" Grid.Row="3" Margin="0,3.5" ToolTip="Page Order" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Horizontal"></ComboBoxItem>
                                        <ComboBoxItem Content="Horizontal Reverse"></ComboBoxItem>
                                        <ComboBoxItem Content="Vertical"></ComboBoxItem>
                                        <ComboBoxItem Content="Vertical Reverse"></ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox x:Name="scaleComboBox" Grid.Column="2" Grid.Row="4" Margin="0,3.5" ToolTip="Scale" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Auto Fit"></ComboBoxItem>
                                        <ComboBoxItem Content="25%"></ComboBoxItem>
                                        <ComboBoxItem Content="50%"></ComboBoxItem>
                                        <ComboBoxItem Content="75%"></ComboBoxItem>
                                        <ComboBoxItem Content="100%"></ComboBoxItem>
                                        <ComboBoxItem Content="150%"></ComboBoxItem>
                                        <ComboBoxItem Content="200%"></ComboBoxItem>
                                        <ComboBoxItem Content="Custom"></ComboBoxItem>
                                    </ComboBox>
                                    <ui:NumberBox x:Name="customScaleNumberPicker" Grid.Column="2" Grid.Row="5" Margin="0,3.5" Maximum="200" Minimum="10" Value="100" ToolTip="Custom Zoom" Visibility="Collapsed" ValueChanged="CustomZoomNumberPicker_ValueChanged"/>
                                    <ComboBox x:Name="marginComboBox" Grid.Column="2" Grid.Row="6" Margin="0,3.5" ToolTip="Margin" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged">
                                        <ComboBoxItem Content="Default"></ComboBoxItem>
                                        <ComboBoxItem Content="None"></ComboBoxItem>
                                        <ComboBoxItem Content="Minimum"></ComboBoxItem>
                                        <ComboBoxItem Content="Custom"></ComboBoxItem>
                                    </ComboBox>
                                    <ui:NumberBox x:Name="customMarginNumberPicker" Grid.Column="2" Grid.Row="7" Margin="0,3.5" Maximum="50" Minimum="0" Value="0" ToolTip="Custom Margin" Visibility="Collapsed" ValueChanged="CustomMarginNumberPicker_ValueChanged"/>
                                    <CheckBox x:Name="doubleSidedCheckBox" Grid.Column="2" Grid.Row="8" Margin="0,3.5" ToolTip="Double-sided" Content="Print on Both Sides" IsChecked="False"></CheckBox>
                                    <ComboBox x:Name="doubleSidedTypeComboBox" Grid.Column="2" Grid.Row="9" Margin="0,3.5" ToolTip="Double-sided Type" SelectedIndex="0" Visibility="{Binding ElementName=doubleSidedCheckBox, Path=IsChecked, Converter={StaticResource booleanToVisibilityConverter}}">
                                        <ComboBoxItem Content="Flip on Long Edge"></ComboBoxItem>
                                        <ComboBoxItem Content="Flip on Short Edge"></ComboBoxItem>
                                    </ComboBox>
                                    <ComboBox x:Name="sizeComboBox" Grid.Column="2" Grid.Row="10" Margin="0,3.5" ToolTip="Paper Size" SelectedIndex="0" SelectionChanged="SettingComboBox_SelectionChanged"></ComboBox>
                                    <ComboBox x:Name="typeComboBox" Grid.Column="2" Grid.Row="11" Margin="0,3.5" ToolTip="Paper Type" SelectedIndex="0"></ComboBox>
                                    <ComboBox x:Name="sourceComboBox" Grid.Column="2" Grid.Row="12" Margin="0,3.5" ToolTip="Paper Source" SelectedIndex="0"></ComboBox>
                                </Grid>
                            </Expander>
                        </Grid>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </DockPanel>
