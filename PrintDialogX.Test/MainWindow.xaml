<Window x:Class="PrintDialogX.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFF0F0F0"
        Title="PrintDialogX Test Window" Height="400" Width="600">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Recommended: </TextBlock>
            <Button Content="Test PrintDialogX (Document Generation While Starting the Dialog)" Click="Test1ButtonClick" Width="410" Height="30"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <TextBlock VerticalAlignment="Center" Margin="0,0,10,0">Tranditional:</TextBlock>
            <Button Content="Test PrintDialogX (Document Generation Before Starting the Dialog)" Click="Test2ButtonClick" Width="410" Height="30"></Button>
        </StackPanel>
    </StackPanel>
</Window>
